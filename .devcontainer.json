{
    "image": "mcr.microsoft.com/devcontainers/miniconda",
    "customizations": {
      "codespaces": {
        "openFiles": [
          "README.md",
          "Lecture1.ipynb",
          "Lecture2.ipynb"
        ]
      },
      "vscode": {
        "extensions": [
          "wijmo.gc-excelviewer",
          "mechatroner.vscode_rainbow_csv",
          "ms-python.python",
          "ms-toolsai.jupyter",
        ]
      }
    },
    "hostRequirements": {
       "cpus": 2,
       "memory": "4gb",
       "storage": "4gb"
    },
    "onCreateCommand": "conda install -y python=3.9.16 jupyter numpy && pip install git+https://https://github.com/amr8004/espei.git && pip install git+https://github.com/amr8004/pycalphad.git"
}
